{
  "family": "consumption-service-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "consumption-service",
      "image": "ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/energy-company-consumption-service-prod:latest",
      "portMappings": [
        {
          "containerPort": 5006,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_APPLICATION_NAME",
          "value": "consumption-service"
        },
        {
          "name": "DB_SERVICE_URL",
          "value": "jdbc:postgresql://energy-company-consumption-prod.REGION.rds.amazonaws.com:5432/consumptionservicedb"
        },
        {
          "name": "DB_SERVICE_USERNAME",
          "value": "energycompany"
        },
        {
          "name": "EUREKA_SERVICE_URL",
          "value": "http://eureka-server-alb:8761/eureka/"
        }
      ],
      "secrets": [
        {
          "name": "DB_SERVICE_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:ACCOUNT_ID:secret:energy-company/db-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/energy-company/consumption-service-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5006/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 90
      }
    }
  ]
}

