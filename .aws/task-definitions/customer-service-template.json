{
  "family": "customer-service-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::480241654156:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::480241654156:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "customer-service",
      "image": "480241654156.dkr.ecr.us-east-1.amazonaws.com/energy-company-customer-service-prod:latest",
      "portMappings": [
        {
          "containerPort": 5007,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_APPLICATION_NAME",
          "value": "customer-service"
        },
        {
          "name": "DB_SERVICE_URL",
          "value": "jdbc:postgresql://energy-company-customer-dev.c6bsckuo8rle.us-east-1.rds.amazonaws.com:5432/customerservicedb"
        },
        {
          "name": "DB_SERVICE_USERNAME",
          "value": "energycompany"
        },
        {
          "name": "EUREKA_SERVICE_URL",
          "value": "http://eureka-server-alb:8761/eureka/"
        }
      ],
      "secrets": [
        {
          "name": "DB_SERVICE_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:480241654156:secret:energy-company/db-password-0rCkup"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/energy-company/customer-service-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5007/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 90
      }
    }
  ]
}