{
  "family": "elering-adapter-dev",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::480241654156:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::480241654156:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "elering-adapter",
      "image": "PLACEHOLDER_IMAGE",
      "portMappings": [
        {
          "containerPort": 5008,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_APPLICATION_NAME",
          "value": "elering-adapter"
        },
        {
          "name": "EUREKA_SERVICE_URL",
          "value": "http://energy-company-alb-dev-44188713.us-east-1.elb.amazonaws.com:8761/eureka/"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/energy-company/elering-adapter-dev",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:5008/actuator/health/readiness || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 120
      }
    }
  ]
}
