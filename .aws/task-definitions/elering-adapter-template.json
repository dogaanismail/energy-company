{
  "family": "elering-adapter-dev",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::480241654156:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::480241654156:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "elering-adapter",
      "image": "480241654156.dkr.ecr.us-east-1.amazonaws.com/energy-company-elering-adapter-dev:latest",
      "portMappings": [
        {
          "containerPort": 5005,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_APPLICATION_NAME",
          "value": "elering-adapter"
        },
        {
          "name": "EUREKA_SERVICE_URL",
          "value": "http://eureka-server-alb:8761/eureka/"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/energy-company/elering-adapter-dev",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5005/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

