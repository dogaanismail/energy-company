{
  "family": "energy-company-client-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::480241654156:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::480241654156:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "energy-company-client",
      "image": "480241654156.dkr.ecr.us-east-1.amazonaws.com/energy-company-energy-company-client-prod:latest",
      "portMappings": [
        {
          "containerPort": 5173,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "VITE_API_BASE_URL",
          "value": "https://api.your-energy-company-domain.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/energy-company/energy-company-client-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5173/ || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

